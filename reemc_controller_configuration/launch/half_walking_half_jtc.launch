<launch>
  <!-- Controller configuration -->
  <rosparam command="load"
    file="$(find reemc_controller_configuration)/config/joint_trajectory_controllers.yaml" />

  <!-- Spawn whole-body joint trajectory controllers -->
  <node name="joint_trajectory_controllers_spawner"
        pkg="controller_manager" type="spawner" output="screen"
        args="torso_controller
              head_controller
              left_arm_controller
              right_arm_controller
              left_hand_controller
              right_hand_controller" />

  <!-- Configure walking controller for lower-body only -->
  <rosparam command="delete" param="walking_controller/joints" />
  <rosparam command="load"
    file="$(find reemc_controller_configuration)/config/walking_controller_lowerbody.yaml" />

  <!-- Spawn walking controller -->
  <node name="walking_controllers_spawner"
        pkg="controller_manager" type="spawner" output="screen"
        args="walking_controller" />

  <!-- Point head action -->
  <group ns="head_controller">
    <node name="point_head_action" pkg="reem_head_action" type="reem_head_action" output="screen" >
      <rosparam>
        pan_link:  head_1_link
        tilt_link: head_2_link
        success_angle_threshold: 0.01
      </rosparam>
    </node>
  </group>
</launch>
